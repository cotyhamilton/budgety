{
	"name": "budgety",
	"version": "1.0.0-next.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/cotyhamilton/budgety.git"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "yarn test:e2e && yarn test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:e2e": "playwright test",
		"test:codegen": "playwright codegen http://localhost:4173/",
		"test:unit": "vitest run",
		"test:coverage": "vitest run --coverage",
		"change": "beachball change",
		"migrate:create": "drizzle-kit generate:sqlite"
	},
	"devDependencies": {
		"@internationalized/date": "^3.5.4",
		"@playwright/test": "^1.44.1",
		"@square/svelte-store": "^1.0.18",
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.5.10",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@testing-library/svelte": "^4.1.0",
		"@typescript-eslint/eslint-plugin": "^7.11.0",
		"@typescript-eslint/parser": "^7.11.0",
		"@vitest/coverage-v8": "^1.6.0",
		"@vlcn.io/crsqlite-wasm": "^0.16.0",
		"autoprefixer": "^10.4.19",
		"beachball": "^2.43.1",
		"bits-ui": "^0.21.10",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.22.1",
		"drizzle-orm": "^0.31.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-square-svelte-store": "^1.0.0",
		"eslint-plugin-svelte": "^2.39.0",
		"jsdom": "^24.1.0",
		"lucide-svelte": "^0.383.0",
		"postcss": "^8.4.38",
		"postcss-load-config": "^5.0.3",
		"prettier": "^3.3.0",
		"prettier-plugin-svelte": "^3.2.3",
		"radix-icons-svelte": "^1.2.1",
		"svelte": "^4.2.17",
		"svelte-check": "^3.8.0",
		"tailwind-merge": "^2.3.0",
		"tailwind-variants": "^0.2.1",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.4.1",
		"typescript": "^5.4.5",
		"vaul-svelte": "^0.3.1",
		"vite": "^5.2.12",
		"vitest": "^1.6.0"
