{
	"name": "budgety",
	"version": "1.0.0-next.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/cotyhamilton/budgety.git"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "yarn test:e2e && yarn test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:e2e": "playwright test",
		"test:codegen": "playwright codegen http://localhost:4173/",
		"test:unit": "vitest run",
		"test:coverage": "vitest run --coverage",
		"change": "beachball change",
		"migrate:create": "drizzle-kit generate:sqlite"
	},
	"devDependencies": {
		"@playwright/test": "^1.40.1",
		"@square/svelte-store": "^1.0.17",
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@testing-library/svelte": "^4.0.5",
		"@typescript-eslint/eslint-plugin": "^6.18.0",
		"@typescript-eslint/parser": "^6.18.0",
		"@vitest/coverage-v8": "^1.1.3",
		"@vlcn.io/crsqlite-wasm": "^0.16.0",
		"autoprefixer": "^10.4.16",
		"beachball": "^2.39.0",
		"bits-ui": "^0.13.5",
		"clsx": "^2.1.0",
		"drizzle-kit": "^0.20.10",
		"drizzle-orm": "^0.29.3",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-square-svelte-store": "^1.0.0",
		"eslint-plugin-svelte": "^2.35.1",
		"formsnap": "^0.4.2",
		"jsdom": "^23.2.0",
		"lucide-svelte": "^0.307.0",
		"postcss": "^8.4.33",
		"postcss-load-config": "^5.0.2",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"radix-icons-svelte": "^1.2.1",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"sveltekit-superforms": "^1.13.2",
		"tailwind-merge": "^2.2.0",
		"tailwind-variants": "^0.1.20",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.4.1",
		"typescript": "^5.3.3",
		"vite": "^5.0.11",
		"vitest": "^1.1.3"
	},
	"type": "module",
	"dependencies": {}
}
